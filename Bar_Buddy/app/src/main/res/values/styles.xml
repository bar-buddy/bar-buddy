<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavTheme">
        <!--<item name="android:itemTextAppearance">@color/bottom_nav_icon_selector</item>
        <item name="itemIconTint">@color/bottom_nav_icon_selector</item>-->
    </style>

    <style name="AppTheme.NoActionBar">

    </style>

    <style name="CollapsingActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ExpandedTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
