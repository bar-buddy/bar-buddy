<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/barcard_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:minHeight="150dp">

        <!--<android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="-1dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/rounders2" />
        </android.support.v7.widget.CardView>-->

        <ImageView
            android:id="@+id/barcard_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rounders2" />

        <TextView
            android:id="@+id/bar_text_view_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Rounders"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="80dp"
            android:text="$5"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barcard_image"
            app:layout_constraintTop_toTopOf="@id/barcard_image" />

        <TextView
            android:id="@+id/waittime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="108dp"
            android:text="7 minutes"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/barcard_image"
            app:layout_constraintTop_toTopOf="@id/barcard_image" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/hiddenBarCardExpansion"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/barcard_image">

            <TextView
                android:layout_width="300dp"
                android:layout_height="125dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@android:color/black"
                android:text="Description: I mean like it's a pretty good bar and you'll like it and all that stuff for sure. I can guarantee it."/>

        </android.support.constraint.ConstraintLayout>

        <!--<TextView
            android:id="@+id/hiddenTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/barcard_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone" />-->

        <Button
            android:id="favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/expand_button"/>

        <Button
            android:id="@+id/expand_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_expand_more"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
