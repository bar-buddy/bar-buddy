<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/user_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Welcome, Manager"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/manager_swipe_refresh"
        android:layout_width="wrap_content"
        android:layout_height="270dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/your_bar_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/addWeeklySpecial"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Add Weekly Special"
        style="@style/BorderedButton"/>

    <Button
        android:id="@+id/addEvent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Add Event"
        style="@style/BorderedButton"/>

    <Button
        android:id="@+id/addCoverAndWait"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Add Cover and Wait"
        style="@style/BorderedButton"/>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:text="LOGOUT"
        android:textColor="@android:color/white"
        style="@style/BorderedButton"/>

</LinearLayout>

